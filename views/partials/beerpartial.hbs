        <img src="{{image_url}}" class="card-img-top" alt="{{name}}">
        <div class="card-body">
            <h5 class="card-title">{{name}}</h5>
            <h6 class="card-tagline">{{tagline}}</h6>
            <p class="card-text">{{description}}</p>
        </div>
    </div>
</div>